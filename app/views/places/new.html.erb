<h3>New place</h3>


<%= form_for(@place) do |f| %>
    <% if @place.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <h4><%= pluralize(@place.errors.count, "error") %> prohibited this place from being saved:</h4>

          <ul>
            <% @place.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="content">
      <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :address %>
        <%= f.text_field :address, :readonly => "readonly" %>
      </p>
      <p>
        <%= f.label :unified_address %>
        <%= f.text_field :unified_address,  :readonly => "readonly" %>
      </p>
      <p>
        <%= f.label :latitude %>
        <%= f.text_field :latitude,  :readonly => "readonly" %>
      </p>
      <p>
        <%= f.label :longitude %>
        <%= f.text_field :longitude,  :readonly => "readonly" %>
      </p>
      <p><%= f.submit %></p>
    </div>
<% end %>

<%= link_to 'Back', places_path %>
